{
  "name": "whacko",
  "scopeName": "source.whacko",
  "fileTypes": [
    ".wo"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.whacko",
      "match": "\\b(as|async|await|break|builtin|builtintype|class|const|constructor|continue|declare|else|enum|export|extends|extern|false|final|fn|from|get|grab|hold|if|import|let|namespace|new|null|private|return|set|super|this|true|type|while|yield)\\b"
    },
    {
      "name": "string.quoted.double.whacko",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.whacko",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.whacko"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.whacko"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.whacko"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.whacko"
        }
      ]
    },
    "string-character-escape": {
      "name": "constant.character.escape.whacko",
      "match": "\\\\(x[0-9A-Fa-f]{2}|u[0-9A-Fa-f]{4}|u\\{[0-9A-Fa-f]+\\}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.|$)"
    }
  }
}
