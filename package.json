{
  "name": "whacko-lang",
  "version": "0.0.1",
  "description": "Compiled language that runs in lunatic",
  "main": "lib/index.js",
  "type": "module",
  "scripts": {
    "cat": "cat src/grammar/prelude.ne src/grammar/ast/*.ne > src/grammar/compiled.ne",
    "tsc": "tsc",
    "grammar": "nearleyc src/grammar/compiled.ne -o src/grammar.ts",
    "build": "run-s cat grammar tsc",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jtenner/whacko-lang.git"
  },
  "keywords": [
    "lang",
    "llvm",
    "lunatic",
    "whacko"
  ],
  "author": "Joshua Tenner <tenner.joshua@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/jtenner/whacko-lang/issues"
  },
  "homepage": "https://github.com/jtenner/whacko-lang#readme",
  "devDependencies": {
    "@types/diff": "^5.0.2",
    "@types/glob": "^8.0.1",
    "@types/nearley": "^2.11.2",
    "@types/node": "^18.11.18",
    "diff": "^5.1.0",
    "glob": "^8.1.0",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "chalk": "^5.2.0",
    "nearley": "^2.20.1"
  }
}
