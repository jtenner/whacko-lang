{
  "name": "whacko-lang",
  "displayName": "whacko-lang",
  "description": "Please enter a brief description here",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.56.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "whacko",
        "aliases": [
          "whacko",
          "whacko"
        ],
        "extensions": [
          ".wo"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "whacko",
        "scopeName": "source.whacko",
        "path": "./syntaxes/whacko.tmLanguage.json"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:whacko"
  ],
  "files": [
    "bin",
    "out",
    "src"
  ],
  "bin": {
    "whacko-cli": "./bin/cli"
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run tsc && npm run lint",
    "tsc": "tsc -b tsconfig.json",
    "watch": "tsc -b tsconfig.json --watch",
    "lint": "eslint src --ext ts",
    "langium:generate": "langium generate",
    "langium:watch": "langium generate --watch",
    "test": "run-s test:ast",
    "test:ast": "node test/ast.mjs"
  },
  "dependencies": {
    "chalk": "^5.2.0",
    "chevrotain": "^10.5.0",
    "commander": "^10.0.0",
    "glob": "^9.3.2",
    "langium": "~1.1.0",
    "vscode-languageclient": "^8.1.0",
    "vscode-languageserver": "^8.1.0",
    "vscode-uri": "^3.0.7",
    "llvm-js": "https://github.com/jtenner/llvm-js/archive/refs/heads/master.tar.gz"
  },
  "devDependencies": {
    "@types/colors": "^1.2.1",
    "@types/diff": "^5.0.3",
    "@types/glob": "^8.1.0",
    "@types/node": "^18.15.10",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "colors": "^1.4.0",
    "diff": "^5.1.0",
    "eslint": "^8.36.0",
    "langium-cli": "~1.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "typescript": "^5.0.2"
  }
}
